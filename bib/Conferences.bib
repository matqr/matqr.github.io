	journal = {Environ. Res. Lett.},
	author = {Nazarian, Negin and Liu, Sijie and Kohler, Manon and Lee, Jason K W and Miller, Clayton and Chow, Winston T L and Alhadad, Sharifah Badriyah and Martilli, Alberto and Quintana, Matias and Sunden, Lindsey and Norford, Leslie K},
	year = {2021},
	pages = {16},
	file = {Nazarian et al. - 2021 - Project Coolbit can your watch predict heat stres.pdf:/Users/maqr/Zotero/storage/734GE9WT/Nazarian et al. - 2021 - Project Coolbit can your watch predict heat stres.pdf:application/pdf},
