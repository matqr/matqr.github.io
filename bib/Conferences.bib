	keywords = {acm reference format, thermal comfort, machine learning, buildings, survey, data augmentation, class balancing, genera-, tive adversarial network},
	pages = {120--129},
	file = {PDF:/Users/maqr/Zotero/storage/THGI54QH/3408308.3427612.pdf:application/pdf},
}

